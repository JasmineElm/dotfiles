source ~/.mutt/credentials
source ~/.mutt/colours

# Connection
set ssl_force_tls = yes
set ssl_starttls  = yes

# Receive
set imap_check_subscribed


# Folder
set spoolfile = +INBOX
set postponed = +Drafts
set record    = +Sent


# html rendering
#
set mailcap_path 	= ~/.mutt/mailcap
auto_view text/html

